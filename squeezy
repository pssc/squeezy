my $timeout_aws = $timeout+3;
my $delay_aws = 3;
my $retry_aws = 3;
my $json_api_uri_post = "/jsonrpc.js";
my $json_api_uri_pre = "http://";
my $socket = undef;
my $action_def = sub{ };
my $action = $action_def;
my $not = 0;
